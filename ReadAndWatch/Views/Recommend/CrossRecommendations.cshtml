@model List<ReadAndWatch.Models.CrossRecommendationViewModel>

@{
    ViewData["Title"] = "Önerilen İçerikler";
}

<style>
    body {
        background-color: #121212;
        color: #fff;
    }

    .recommend-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
    }

    .recommend-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        padding: 0 40px 60px;
    }

    .recommend-card {
        background-color: #1e1e1e;
        border: 1px solid #2c2c2c;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(255, 255, 255, 0.05);
        transition: transform 0.2s ease;
        text-decoration: none;
        color: inherit;
        display: block;
    }

        .recommend-card:hover {
            transform: scale(1.02);
            background-color: #181818;
        }

        .recommend-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .recommend-card h5 {
            font-size: 1.2rem;
            color: #e50914;
            margin-bottom: 10px;
            text-transform: capitalize;
        }

        .recommend-card p {
            font-size: 0.95rem;
            color: #ccc;
        }

    .badge-type {
        display: inline-block;
        background-color: #444;
        color: #fff;
        font-size: 0.75rem;
        padding: 5px 10px;
        border-radius: 8px;
        margin-top: 10px;
        text-transform: uppercase;
    }
</style>

<h2 class="recommend-title">Önerilen İçerikler</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-center">Hiç öneri bulunamadı.</p>
}
else
{
    <div class="recommend-grid">
        @foreach (var item in Model)
        {
            var controller = item.Type == "book" ? "Book" : "Movie";

            <a asp-controller="@controller" asp-action="Details" asp-route-id="@item.Id" class="recommend-card">
                @if (!string.IsNullOrEmpty(item.Thumbnail))
                {
                    <img src="@item.Thumbnail" alt="Kapak Görseli" />
                }
                <h5>@item.Title</h5>
                <p>@item.Overview</p>
                <span class="badge-type">@item.Type</span>
            </a>
        }
    </div>
}
