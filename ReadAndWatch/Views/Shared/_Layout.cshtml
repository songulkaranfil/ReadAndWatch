@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var showNavbar = Context.Request.Path.Value.ToLower() == "/";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReadAndWatch</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReadAndWatch.styles.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        .nav-link .fa-heart {
            transition: color 0.3s ease;
        }

        .nav-link:hover .fa-heart {
            color: red;
        }

        .navbar-nav .nav-item {
            margin-left: 15px;
            margin-right: 15px;
        }

        .hover-red:hover {
            color: #e50914 !important;
            transition: color 0.3s ease;
        }

        .navbar-dark .navbar-nav .nav-link,
        .navbar-dark .navbar-brand {
            color: white !important;
        }

        .navbar-nav .nav-link {
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #e50914 !important;
                font-size: 1.1rem;
            }
    </style>
</head>
<body>

    <!-- NAVBAR: Tüm sayfalarda görünür -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #111;">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Read<span class="text-danger">And</span>Watch
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link hover-red" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-red" asp-controller="Movie" asp-action="Index">Filmler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-red" asp-controller="Book" asp-action="Index">Kitaplar</a>
                        </li>

                        @if (showNavbar)
                        {
                            @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link hover-red" asp-controller="Recommend" asp-action="GetRecommendation">Tavsiye Ver</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="User" asp-action="Favorites" title="Favorilerim">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link hover-red" asp-controller="User" asp-action="Logout">Çıkış Yap</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link hover-red" asp-controller="User" asp-action="Login">Giriş Yap</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link hover-red" asp-controller="User" asp-action="Register">Kayıt Ol</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- SAYFA İÇERİĞİ -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - ReadAndWatch - <a asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
