@model ReadAndWatch.Models.Book

@{
    ViewData["Title"] = @Model.Title;
}

<style>
    .details-card {
        background-color: #1c1c1c;
        border-radius: 20px;
        padding: 30px;
        margin: 50px auto;
        max-width: 1100px;
        display: flex;
        gap: 40px;
        color: white;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
    }

        .details-card img {
            width: 320px;
            height: 460px;
            object-fit: cover;
            border-radius: 10px;
            background-color: #111;
        }

    .info {
        flex: 1;
    }

        .info h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .info .description {
            font-size: 15px;
            color: #ccc;
            margin-bottom: 25px;
            text-align: justify;
        }

        .info .detail-row {
            margin-bottom: 10px;
            font-size: 15px;
        }

            .info .detail-row strong {
                color: #e50914;
                width: 120px;
                display: inline-block;
            }

    .favorite-button {
        background-color: #e50914;
        color: white;
        border: none;
        padding: 10px 18px;
        font-size: 16px;
        border-radius: 8px;
        margin-top: 20px;
        transition: 0.3s ease;
    }

        .favorite-button:hover {
            background-color: #ff1f3d;
        }
</style>

<div class="details-card">
    <img src="@(!string.IsNullOrEmpty(Model.Thumbnail) ? Model.Thumbnail : Url.Content("~/images/book-placeholder.jpg"))" alt="@Model.Title" />


    <div class="info">
        <h2>@Model.Title</h2>
        <p class="description">@Model.Description</p>

        <div class="detail-row"><strong>Yazar:</strong> @Model.Authors</div>
        <div class="detail-row"><strong>Kategori:</strong> @Model.Categories</div>
        <div class="detail-row">
            <strong>Sayfa Sayısı:</strong> @Convert.ToDouble(Model.NumPages).ToString("0.#", System.Globalization.CultureInfo.InvariantCulture)
        </div>
        <div class="detail-row"><strong>Yayın Yılı:</strong> @Convert.ToDouble(Model.PublishedYear).ToString("0.#")</div>
        <div class="detail-row"><strong>Ortalama Puan:</strong> @Model.AverageRating</div>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Book" asp-action="AddFavoriteBook" method="post">
                <input type="hidden" name="bookId" value="@Model.Id" />
                <button type="submit" class="favorite-button">❤️ Favorilere Ekle</button>
            </form>
        }
    </div>
</div>
